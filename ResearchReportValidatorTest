	static public function validateRecipientCity($args, $record, $field, $nppes_data, $th_data) {
		$valid = TRUE;

		$regex = '/^.{1,40}$/';

		$keys = array_keys($args);

		$check_value = "";
		$check_test = "";
		$check_return = "";

		if (isset($th_data) && isset($th_data['COVERED_RECIPIENT_TEACHING_HOSPITAL_TAX_ID_NUMBER']) && isset($th_data['COVERED_RECIPIENT_TEACHING_HOSPITAL_TAX_ID_NUMBER'][$record[$keys[1]]])) {
			$check_value = strtoupper($record[$field]);
			$check_test = strtoupper($th_data['COVERED_RECIPIENT_TEACHING_HOSPITAL_TAX_ID_NUMBER'][$record[$keys[1]]]['city']);
			$check_return = $th_data['COVERED_RECIPIENT_TEACHING_HOSPITAL_TAX_ID_NUMBER'][$record[$keys[1]]]['city'];
		}

		if ($record[$keys[0]] == $args[$keys[0]] && empty($record[$field])) {
			$valid = FALSE;
		} else if (!empty($record[$field]) && !preg_match($regex, $record[$field])) {
			$valid = FALSE;
		} else if ($record[$keys[1]] != "" && !empty($record[$field])) {
			$valid = FALSE;

			if ($check_value == $check_test) {
				$valid = TRUE;
			}
		}

		if (!$valid) {
			if ($check_return != "") {
				$valid = array();
				$valid['valid'] = FALSE;
				$valid['dynamic_error'] = ", it should be '" . $check_return . "'.";
			} else {
				$valid = array();
				$valid['valid'] = FALSE;
				$valid['dynamic_error'] = ".";
			}
		}

		return $valid;
	}

	static public function validateRecipientState($args, $record, $field, $nppes_data, $th_data) {
		$valid = TRUE;

		$regex = '/^[a-zA-Z]{2}$/';

		$keys = array_keys($args);

		$check_value = "";
		$check_test = "";
		$check_return = "";

		if (isset($th_data) && isset($th_data['COVERED_RECIPIENT_TEACHING_HOSPITAL_TAX_ID_NUMBER']) && isset($th_data['COVERED_RECIPIENT_TEACHING_HOSPITAL_TAX_ID_NUMBER'][$record[$keys[2]]])) {
			$check_value = strtoupper($record[$field]);
			$check_test = strtoupper($th_data['COVERED_RECIPIENT_TEACHING_HOSPITAL_TAX_ID_NUMBER'][$record[$keys[2]]]['state']);
			$check_return = $th_data['COVERED_RECIPIENT_TEACHING_HOSPITAL_TAX_ID_NUMBER'][$record[$keys[2]]]['state'];
		}

		if (in_array($record[$keys[0]], $args[$keys[0]]) && empty($record[$field])) {
			$valid = FALSE;
		} else if (!empty($record[$field]) && !preg_match($regex, $record[$field])) {
			$valid = FALSE;
		} else if (!empty($record[$field])) {
			$valid = ReportValidator::validateStateList($record[$field]);
			if (!$valid) {
				if ($record[$keys[1]] == $args[$keys[1]] && $record[$keys[2]] != "") {
					$valid = FALSE;

					if ($check_value == $check_test) {
						$valid = TRUE;
					}
				}
			}
		}

		if (!$valid) {
			if ($check_return != "") {
				$valid = array();
				$valid['valid'] = FALSE;
				$valid['dynamic_error'] = ", it should be '" . $check_return . "'.";
			} else {
				$valid = array();
				$valid['valid'] = FALSE;
				$valid['dynamic_error'] = ".";
			}
		}

		return $valid;
	}

	static public function validateCountry($args, $record, $field, $nppes_data, $th_data) {
		$valid = TRUE;

		if (!empty($record[$field])) {
			$valid = ReportValidator::validateCountryList($record[$field]);
		}

		return $valid;
	}

	static public function validateRecipientZipCode($args, $record, $field, $nppes_data, $th_data) {
		$valid = TRUE;

		$regex = '/^(\d{5}(\d{4})?)?$/';

		$keys = array_keys($args);

		$check_value = "";
		$check_test = "";
		$check_return = "";

		if (isset($th_data) && isset($th_data['COVERED_RECIPIENT_TEACHING_HOSPITAL_TAX_ID_NUMBER']) && isset($th_data['COVERED_RECIPIENT_TEACHING_HOSPITAL_TAX_ID_NUMBER'][$record[$keys[2]]])) {
			$check_value = strtoupper($record[$field]);
			$check_test = strtoupper($th_data['COVERED_RECIPIENT_TEACHING_HOSPITAL_TAX_ID_NUMBER'][$record[$keys[2]]]['zipcode']);
			$check_return = $th_data['COVERED_RECIPIENT_TEACHING_HOSPITAL_TAX_ID_NUMBER'][$record[$keys[2]]]['zipcode'];
		}

		if (in_array($record[$keys[0]], $args[$keys[0]]) && empty($record[$field])) {
			$valid = FALSE;
		} else if (!empty($record[$field]) && !preg_match($regex, $record[$field])) {
			$valid = FALSE;
		} else if (!empty($record[$field])) {
			if ($record[$keys[1]] == $args[$keys[1]] && $record[$keys[2]] != "") {
				$valid = FALSE;

				if ($check_value == $check_test) {
					$valid = TRUE;
				}
			}
		}

		if (!$valid) {
			if ($check_return != "") {
				$valid = array();
				$valid['valid'] = FALSE;
				$valid['dynamic_error'] = ", it should be '" . $check_return . "'.";
			} else {
				$valid = array();
				$valid['valid'] = FALSE;
				$valid['dynamic_error'] = ".";
			}
		}

		return $valid;
	}
	static public function validateRecipientProvince($args, $record, $field, $nppes_data, $th_data) {
		$valid = TRUE;

		$regex = '/^.{1,20}$/';

		$keys = array_keys($args);

		if (!empty($record[$field]) && !preg_match($regex, $record[$field])) {
			$valid = FALSE;
		}

		return $valid;
	}
	static public function validateRecipientPostalCode($args, $record, $field, $nppes_data, $th_data) {
		$valid = TRUE;

		$regex = '/^[a-zA-Z\d]{1,20}$/';

		$keys = array_keys($args);

		if (!in_array($record[$keys[0]], $args[$keys[0]]) && empty($record[$field])) {
			$valid = FALSE;
		} else if (!empty($record[$field]) && !preg_match($regex, $record[$field])) {
