	static public function validateInvestigatorNPI($args, $record, $field, $nppes_data, $th_data) {
		$valid = TRUE;

		$regex = '/^\d{10}$/';

		$keys = array_keys($args);

		if ($record[$keys[0]] == $args[$keys[0]] && empty($record[$field])) {
			$valid = FALSE;
		} else if (!empty($record[$field]) && !preg_match($regex, $record[$field])) {
			$valid = FALSE;
		} else if (!empty($record[$field])) {
			$valid = FALSE;

			if (isset($nppes_data) && isset($nppes_data[$field]) && isset($nppes_data[$field][$record[$field]])) {
				$npi_str = "NPI";
				if (DIA_TESTING) {
					$npi_str = "npi";
				}
				if (strtoupper($record[$field]) == strtoupper($nppes_data[$field][$record[$field]][$npi_str])) {
					$valid = TRUE;
				}
			}
		}

		return $valid;
	}
