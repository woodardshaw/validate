<?php
class ResearchReportValidator extends ReportValidator {

	/**
	 * Overrides ReportValidator::validationRules().
	 *
	 * @see https://docs.mmis-inc.com/display/MVP/Validation+Rules+-+Federal+Research+Report
	 */
	public function validationRules($field) {
		switch ($field) {
			case 'APPLICABLE_MANUFACTURER_OR_APPLICABLE_GPO_NAME':
				return array(
					'required' => TRUE,
					'regex' => '/^[a-zA-Z\&\ \#\@\_\,\.\'\-\d]{1,100}$/',
					'message' => t('APPLICABLE_MANUFACTURER_OR_APPLICABLE_GPO_NAME is required and must be 100 valid characters or less.'),
					'category' => t('Applicable Manufacturer'),
				);
			case 'APPLICABLE_MANUFACTURER_OR_APPLICABLE_GPO_ID':
				return array(
					'required' => TRUE,
					'regex' => '/^[a-zA-Z\d]{1,38}$/',
					'message' => t('APPLICABLE_MANUFACTURER_OR_APPLICABLE_GPO_ID must be 38 characters or less.'),
					'category' => t('Applicable Manufacturer'),
				);
			case 'CONSOLIDATED_REPORT_INDICATOR':
				return array(
					'required' => TRUE,
					'regex' => '/^(Y|N){1}$/',
					'message' => t('CONSOLIDATED_REPORT_INDICATOR is required and must be "Y" or "N".'),
					'category' => t('General/Formatting'),
				);
			case 'RESUBMISSION_FILE_INDICATOR':
				return array(
					'required' => TRUE,
					'regex' => '/^(Y|N){1}$/',
					'message' => t('RESUBMISSION_FILE_INDICATOR is required and must be "Y" or "N".'),
					'category' => t('General/Formatting'),
				);
			case 'COVERED_RECIPIENT_TYPE':
				return array(
					'required' => TRUE,
					'regex' => '/^(1|2|3|4){1}$/',
					'message' => t('COVERED_RECIPIENT_TYPE is required and must be "1", "2", "3" or "4".'),
					'category' => t('Covered Recipient'),
				);
			case 'NON_COVERED_RECIPIENT_ENTITY_NAME':
				return array(
					'required' => FALSE,
					'callback' => array('ResearchReportValidator', 'validateRecipientEntity'),
					'args' => array('COVERED_RECIPIENT_TYPE' => 3),
					'message' => t('NON_COVERED_RECIPIENT_ENTITY_NAME must be 100 characters or less.'),
					'category' => t('Covered Recipient'),
				);
			case 'COVERED_RECIPIENT_TEACHING_HOSPITAL_NAME':
				return array(
					'required' => FALSE,
					'callback' => array('ResearchReportValidator', 'validateTeachingHospitalName'),
					'args' => array('COVERED_RECIPIENT_TYPE' => 2, 'COVERED_RECIPIENT_TEACHING_HOSPITAL_TAX_ID_NUMBER' => ''),
					'message' => t('COVERED_RECIPIENT_TEACHING_HOSPITAL_NAME does not match the CMS 2013 Teaching Hospital List'),
					'category' => t('Covered Recipient'),
				);
			case 'COVERED_RECIPIENT_TEACHING_HOSPITAL_TAX_ID_NUMBER':
				return array(
					'required' => FALSE,
					'callback' => array('ResearchReportValidator', 'validateTeachingHospitalTin'),
					'args' => array('COVERED_RECIPIENT_TYPE' => 2),
					'message' => t('COVERED_RECIPIENT_TEACHING_HOSPITAL_TAX_ID_NUMBER does not match the CMS 2013 Teaching Hospital List.'),
					'category' => t('Covered Recipient'),
				);
			case 'COVERED_RECIPIENT_PHYSICIAN_NPI':
				return array(
					'required' => FALSE,
					'callback' => array('ResearchReportValidator', 'validatePhysicianNPI'),
					'args' => array(),
					'message' => t('COVERED_RECIPIENT_PHYSICIAN_NPI must validate against NPPES Database and must be a 10 digit number.'),
					'category' => t('Covered Recipient'),
				);
			case 'COVERED_RECIPIENT_PHYSICIAN_FIRST_NAME':
				return array(
					'required' => FALSE,
					'callback' => array('ResearchReportValidator', 'validatePhysicianFirstName'),
					'args' => array('COVERED_RECIPIENT_TYPE' => 1, 'COVERED_RECIPIENT_PHYSICIAN_NPI' => ''),
					'message' => t('COVERED_RECIPIENT_PHYSICIAN_FIRST_NAME must match the NPPES Database Name and must be 20 characters or less'),
					'category' => t('Covered Recipient'),
				);
			case 'COVERED_RECIPIENT_PHYSICIAN_MIDDLE_NAME':
				return array(
					'required' => FALSE,
					'callback' => array('ResearchReportValidator', 'validatePhysicianMiddleName'),
					'args' => array('COVERED_RECIPIENT_PHYSICIAN_NPI' => ''),
					'message' => t('COVERED_RECIPIENT_PHYSICIAN_MIDDLE_NAME must match the NPPES Database Name and must be 20 characters or less'),
					'category' => t('Covered Recipient'),
				);
			case 'COVERED_RECIPIENT_PHYSICIAN_LAST_NAME':
				return array(
					'required' => FALSE,
					'callback' => array('ResearchReportValidator', 'validatePhysicianLastName'),
					'args' => array('COVERED_RECIPIENT_TYPE' => 1, 'COVERED_RECIPIENT_PHYSICIAN_NPI' => ''),
					'message' => t('COVERED_RECIPIENT_PHYSICIAN_LAST_NAME must match the NPPES Database Name and must be 35 characters or less'),
					'category' => t('Covered Recipient'),
				);
			case 'COVERED_RECIPIENT_PHYSICIAN_NAME_SUFFIX':
				return array(
					'required' => FALSE,
					'callback' => array('ResearchReportValidator', 'validatePhysicianSuffix'),
					'args' => array('COVERED_RECIPIENT_PHYSICIAN_NPI' => ''),
					'message' => t('COVERED_RECIPIENT_PHYSICIAN_NAME_SUFFIX must match the NPPES Database Name and must be 5 characters or less'),
					'category' => t('Covered Recipient'),
				);
			case 'RECIPIENT_BUSINESS_STREET_ADDRESS_LINE_1':
				return array(
					'required' => TRUE,
					'callback' => array('ResearchReportValidator', 'validateRecipientBusinessLineOne'),
					'args' => array('COVERED_RECIPIENT_TYPE' => 2, 'COVERED_RECIPIENT_TEACHING_HOSPITAL_TAX_ID_NUMBER' => ''),
					'message' => t('RECIPIENT_BUSINESS_STREET_ADDRESS_LINE_1 is required and must match the CMS 2013 Teaching Hospital List and must be 55 valid characters or less'),
					'category' => t('Covered Recipient'),
				);
			case 'RECIPIENT_BUSINESS_STREET_ADDRESS_LINE_2':
				return array(
					'required' => FALSE,
					'callback' => array('ResearchReportValidator', 'validateRecipientBusinessLineTwo'),
					'args' => array('COVERED_RECIPIENT_TYPE' => 2, 'COVERED_RECIPIENT_TEACHING_HOSPITAL_TAX_ID_NUMBER' => ''),
					'message' => t('RECIPIENT_BUSINESS_STREET_ADDRESS_LINE_2 must match the CMS 2013 Teaching Hospital List and must be 55 characters or less'),
					'category' => t('Covered Recipient'),
				);
			case 'RECIPIENT_CITY':
				return array(
					'required' => TRUE,
					'callback' => array('ResearchReportValidator', 'validateRecipientCity'),
					'args' => array('COVERED_RECIPIENT_TYPE' => 2, 'COVERED_RECIPIENT_TEACHING_HOSPITAL_TAX_ID_NUMBER' => ''),
					'message' => t('RECIPIENT_CITY is required and must match the CMS 2013 Teaching Hospital List and must be 40 characters or less'),
					'category' => t('Covered Recipient'),
				);
			case 'RECIPIENT_STATE':
				return array(
					'required' => FALSE,
					'callback' => array('ResearchReportValidator', 'validateRecipientState'),
					'args' => array('RECIPIENT_COUNTRY' => array('US', 'United States'), 'COVERED_RECIPIENT_TYPE' => 2, 'COVERED_RECIPIENT_TEACHING_HOSPITAL_TAX_ID_NUMBER' => ''),
					'message' => t('RECIPIENT_STATE must match the CMS 2013 Teaching Hospital List and must match the 2 digit abbreviation for state or territory'),
					'category' => t('Covered Recipient'),
				);
			case 'RECIPIENT_ZIP_CODE':
				return array(
					'required' => FALSE,
					'callback' => array('ResearchReportValidator', 'validateRecipientZipCode'),
					'args' => array('RECIPIENT_COUNTRY' => array('US', 'United States'), 'COVERED_RECIPIENT_TYPE' => 2, 'COVERED_RECIPIENT_TEACHING_HOSPITAL_TAX_ID_NUMBER' => ''),
					'message' => t('RECIPIENT_ZIP_CODE must match the CMS 2013 Teaching Hospital List and must be 5 or 9 digits'),
					'category' => t('Covered Recipient'),
				);
			case 'RECIPIENT_COUNTRY':
				return array(
					'required' => TRUE,
					'callback' => array('ResearchReportValidator', 'validateCountry'),
					'args' => array(),
					'message' => t('RECIPIENT_COUNTRY is required and must be a valid 2-digit country code.'),
					'category' => t('Covered Recipient'),
				);
			case 'RECIPIENT_PROVINCE':
				return array(
					'required' => FALSE,
					'callback' => array('ResearchReportValidator', 'validateRecipientProvince'),
					'args' => array('RECIPIENT_COUNTRY' => array('US', 'United States')),
					'message' => t('RECIPIENT_PROVINCE must be 20 characters or less.'),
					'category' => t('Covered Recipient'),
				);
			case 'RECIPIENT_POSTAL_CODE':
				return array(
					'required' => FALSE,
					'callback' => array('ResearchReportValidator', 'validateRecipientPostalCode'),
					'args' => array('RECIPIENT_COUNTRY' => array('US', 'United States')),
					'message' => t('RECIPIENT_POSTAL_CODE must be 20 alphanumeric characters or less.'),
					'category' => t('Covered Recipient'),
				);
			case 'RECIPIENT_EMAIL_ADDRESS':
				return array(
					'required' => FALSE,
					'callback' => array('ResearchReportValidator', 'validateRecipientEmail'),
					'args' => array(),
					'message' => t('RECIPIENT_EMAIL_ADDRESS must be in a valid email address format and must 100 characters or less.'),
					'category' => t('Covered Recipient'),
				);
			case 'COVERED_RECIPIENT_PHYSICIAN_PRIMARY_TYPE':
				return array(
					'required' => FALSE,
					'callback' => array('ResearchReportValidator', 'validatePhysicianType'),
					'args' => array('COVERED_RECIPIENT_TYPE' => 1),
					'message' => t('COVERED_RECIPIENT_PHYSICIAN_PRIMARY_TYPE must be a number between 1 and 6.'),
					'category' => t('Covered Recipient'),
				);
			case 'COVERED_RECIPIENT_PHYSICIAN_SPECIALTY':
				return array(
					'required' => FALSE,
					'callback' => array('ResearchReportValidator', 'validatePhysicianSpecialty'),
					'args' => array('COVERED_RECIPIENT_TYPE' => 1, 'COVERED_RECIPIENT_PHYSICIAN_NPI' => ''),
					'message' => t('COVERED_RECIPIENT_PHYSICIAN_SPECIALTY needs to match the CMS Specialty Taxonomy List.'),
					'category' => t('Covered Recipient'),
				);
			case 'COVERED_RECIPIENT_PHYSICIAN_LICENSE_STATE_AND_LICENSE_NUMBER_1':
				return array(
					'required' => FALSE,
					'callback' => array('ResearchReportValidator', 'validatePhysicianLicenseNumber'),
					'args' => array('COVERED_RECIPIENT_TYPE' => 1, 'COVERED_RECIPIENT_PHYSICIAN_NPI' => ''),
					'message' => t('COVERED_RECIPIENT_PHYSICIAN_LICENSE_STATE_AND_LICENSE_NUMBER_1 must validate against NPPES Database and must include the 2 digit state abbreviation and match the format MA-12345'),
					'category' => t('Covered Recipient'),
				);
			case 'COVERED_RECIPIENT_PHYSICIAN_LICENSE_STATE_AND_LICENSE_NUMBER_2':
				return array(
					'required' => FALSE,
					'callback' => array('ResearchReportValidator', 'validatePhysicianLicenseNumberBlank'),
					'args' => array('COVERED_RECIPIENT_PHYSICIAN_NPI' => ''),
					'message' => t('COVERED_RECIPIENT_PHYSICIAN_LICENSE_STATE_AND_LICENSE_NUMBER_2 must validate against NPPES Database and must include the 2 digit state abbreviation and match the format MA-12345'),
					'category' => t('Covered Recipient'),
				);
			case 'COVERED_RECIPIENT_PHYSICIAN_LICENSE_STATE_AND_LICENSE_NUMBER_3':
				return array(
					'required' => FALSE,
					'callback' => array('ResearchReportValidator', 'validatePhysicianLicenseNumberBlank'),
					'args' => array('COVERED_RECIPIENT_PHYSICIAN_NPI' => ''),
					'message' => t('COVERED_RECIPIENT_PHYSICIAN_LICENSE_STATE_AND_LICENSE_NUMBER_3 must validate against NPPES Database and must include the 2 digit state abbreviation and match the format MA-12345'),
					'category' => t('Covered Recipient'),
				);
			case 'COVERED_RECIPIENT_PHYSICIAN_LICENSE_STATE_AND_LICENSE_NUMBER_4':
				return array(
					'required' => FALSE,
					'callback' => array('ResearchReportValidator', 'validatePhysicianLicenseNumberBlank'),
					'args' => array('COVERED_RECIPIENT_PHYSICIAN_NPI' => ''),
					'message' => t('COVERED_RECIPIENT_PHYSICIAN_LICENSE_STATE_AND_LICENSE_NUMBER_4 must validate against NPPES Database and must include the 2 digit state abbreviation and match the format MA-12345'),
					'category' => t('Covered Recipient'),
				);
			case 'COVERED_RECIPIENT_PHYSICIAN_LICENSE_STATE_AND_LICENSE_NUMBER_5':
				return array(
					'required' => FALSE,
					'callback' => array('ResearchReportValidator', 'validatePhysicianLicenseNumberBlank'),
					'args' => array('COVERED_RECIPIENT_PHYSICIAN_NPI' => ''),
					'message' => t('COVERED_RECIPIENT_PHYSICIAN_LICENSE_STATE_AND_LICENSE_NUMBER_5 must validate against NPPES Database and must include the 2 digit state abbreviation and match the format MA-12345'),
					'category' => t('Covered Recipient'),
				);
			case 'PRODUCT_INDICATOR':
				return array(
					'required' => TRUE,
					'regex' => '/^(1|2|3|4){1}$/',
					'message' => t('PRODUCT_INDICATOR is required and must be 1, 2, 3, or 4.'),
					'category' => t('Product'),
				);
			case 'NAME_OF_ASSOCIATED_COVERED_DRUG_OR_BIOLOGICAL_1':
				return array(
					'required' => FALSE,
					'callback' => array('ResearchReportValidator', 'validateCoveredDrugName'),
					'args' => array('PRODUCT_INDICATOR' => array(1,4), 'NAME_OF_ASSOCIATED_COVERED_DEVICE_OR_MEDICAL_SUPPLY_1' => ''),
					'message' => t('NAME_OF_ASSOCIATED_COVERED_DRUG_OR_BIOLOGICAL_1 must be 100 valid characters or less.'),
					'category' => t('Product'),
				);
			case 'NAME_OF_ASSOCIATED_COVERED_DRUG_OR_BIOLOGICAL_2':
				return array(
					'required' => FALSE,
					'regex' => '/^[a-zA-Z\&\ \#\@\_\,\.\'\-\d]{1,100}$/',
					'message' => t('NAME_OF_ASSOCIATED_COVERED_DRUG_OR_BIOLOGICAL_2 must be 100 valid characters or less.'),
					'category' => t('Product'),
				);
			case 'NAME_OF_ASSOCIATED_COVERED_DRUG_OR_BIOLOGICAL_3':
				return array(
					'required' => FALSE,
					'regex' => '/^[a-zA-Z\&\ \#\@\_\,\.\'\-\d]{1,100}$/',
					'message' => t('NAME_OF_ASSOCIATED_COVERED_DRUG_OR_BIOLOGICAL_3 must be 100 valid characters or less.'),
					'category' => t('Product'),
				);
			case 'NAME_OF_ASSOCIATED_COVERED_DRUG_OR_BIOLOGICAL_4':
				return array(
					'required' => FALSE,
					'regex' => '/^[a-zA-Z\&\ \#\@\_\,\.\'\-\d]{1,100}$/',
					'message' => t('NAME_OF_ASSOCIATED_COVERED_DRUG_OR_BIOLOGICAL_4 must be 100 valid characters or less.'),
					'category' => t('Product'),
				);
			case 'NAME_OF_ASSOCIATED_COVERED_DRUG_OR_BIOLOGICAL_5':
				return array(
					'required' => FALSE,
					'regex' => '/^[a-zA-Z\&\ \#\@\_\,\.\'\-\d]{1,100}$/',
					'message' => t('NAME_OF_ASSOCIATED_COVERED_DRUG_OR_BIOLOGICAL_5 must be 100 valid characters or less.'),
					'category' => t('Product'),
				);
			case 'NDC_OF_ASSOCIATED_COVERED_DRUG_OR_BIOLOGICAL_1':
				return array(
					'required' => FALSE,
					'callback' => array('ResearchReportValidator', 'validateCoveredDrugNdc'),
					'args' => array('NAME_OF_ASSOCIATED_COVERED_DRUG_OR_BIOLOGICAL_1' => ''),
					'message' => t('NDC_OF_ASSOCIATED_COVERED_DRUG_OR_BIOLOGICAL_1 must be 10 characters or less.'),
					'category' => t('Product'),
				);
			case 'NDC_OF_ASSOCIATED_COVERED_DRUG_OR_BIOLOGICAL_2':
				return array(
					'required' => FALSE,
					'callback' => array('ResearchReportValidator', 'validateCoveredDrugNdc'),
					'args' => array('NAME_OF_ASSOCIATED_COVERED_DRUG_OR_BIOLOGICAL_2' => ''),
					'message' => t('NDC_OF_ASSOCIATED_COVERED_DRUG_OR_BIOLOGICAL_2 must be 10 characters or less.'),
					'category' => t('Product'),
				);
			case 'NDC_OF_ASSOCIATED_COVERED_DRUG_OR_BIOLOGICAL_3':
				return array(
					'required' => FALSE,
					'callback' => array('ResearchReportValidator', 'validateCoveredDrugNdc'),
					'args' => array('NAME_OF_ASSOCIATED_COVERED_DRUG_OR_BIOLOGICAL_3' => ''),
					'message' => t('NDC_OF_ASSOCIATED_COVERED_DRUG_OR_BIOLOGICAL_3 must be 10 characters or less.'),
					'category' => t('Product'),
				);
			case 'NDC_OF_ASSOCIATED_COVERED_DRUG_OR_BIOLOGICAL_4':
				return array(
					'required' => FALSE,
					'callback' => array('ResearchReportValidator', 'validateCoveredDrugNdc'),
					'args' => array('NAME_OF_ASSOCIATED_COVERED_DRUG_OR_BIOLOGICAL_4' => ''),
					'message' => t('NDC_OF_ASSOCIATED_COVERED_DRUG_OR_BIOLOGICAL_4 must be 10 characters or less.'),
					'category' => t('Product'),
				);
			case 'NDC_OF_ASSOCIATED_COVERED_DRUG_OR_BIOLOGICAL_5':
				return array(
					'required' => FALSE,
					'callback' => array('ResearchReportValidator', 'validateCoveredDrugNdc'),
					'args' => array('NAME_OF_ASSOCIATED_COVERED_DRUG_OR_BIOLOGICAL_5' => ''),
					'message' => t('NDC_OF_ASSOCIATED_COVERED_DRUG_OR_BIOLOGICAL_5 must be 10 characters or less.'),
					'category' => t('Product'),
				);
			case 'NAME_OF_ASSOCIATED_COVERED_DEVICE_OR_MEDICAL_SUPPLY_1':
				return array(
					'required' => FALSE,
					'callback' => array('ResearchReportValidator', 'validateCoveredDrugName'),
					'args' => array('PRODUCT_INDICATOR' => array(1,4), 'NAME_OF_ASSOCIATED_COVERED_DRUG_OR_BIOLOGICAL_1' => ''),
					'message' => t('NAME_OF_ASSOCIATED_COVERED_DEVICE_OR_MEDICAL_SUPPLY_1 must be 100 valid characters or less.'),
					'category' => t('Product'),
				);
			case 'NAME_OF_ASSOCIATED_COVERED_DEVICE_OR_MEDICAL_SUPPLY_2':
				return array(
					'required' => FALSE,
					'regex' => '/^[a-zA-Z\&\ \#\@\_\,\.\'\-\d]{1,100}$/',
					'message' => t('NAME_OF_ASSOCIATED_COVERED_DEVICE_OR_MEDICAL_SUPPLY_1 must be 100 valid characters or less.'),
					'category' => t('Product'),
				);
			case 'NAME_OF_ASSOCIATED_COVERED_DEVICE_OR_MEDICAL_SUPPLY_3':
				return array(
					'required' => FALSE,
					'regex' => '/^[a-zA-Z\&\ \#\@\_\,\.\'\-\d]{1,100}$/',
					'message' => t('NAME_OF_ASSOCIATED_COVERED_DEVICE_OR_MEDICAL_SUPPLY_1 must be 100 valid characters or less.'),
					'category' => t('Product'),
				);
			case 'NAME_OF_ASSOCIATED_COVERED_DEVICE_OR_MEDICAL_SUPPLY_4':
				return array(
					'required' => FALSE,
					'regex' => '/^[a-zA-Z\&\ \#\@\_\,\.\'\-\d]{1,100}$/',
					'message' => t('NAME_OF_ASSOCIATED_COVERED_DEVICE_OR_MEDICAL_SUPPLY_1 must be 100 valid characters or less.'),
					'category' => t('Product'),
				);
			case 'NAME_OF_ASSOCIATED_COVERED_DEVICE_OR_MEDICAL_SUPPLY_5':
				return array(
					'required' => FALSE,
					'regex' => '/^[a-zA-Z\&\ \#\@\_\,\.\'\-\d]{1,100}$/',
					'message' => t('NAME_OF_ASSOCIATED_COVERED_DEVICE_OR_MEDICAL_SUPPLY_1 must be 100 valid characters or less.'),
					'category' => t('Product'),
				);
			case 'APPLICABLE_MANUFACTURER_OR_APPLICABLE_GPO_MAKING_PAYMENT_NAME':
				return array(
					'required' => TRUE,
					'regex' => '/^[a-zA-Z\&\ \#\@\_\,\.\'\-\d]{1,100}$/',
					'message' => t('APPLICABLE_MANUFACTURER_OR_APPLICABLE_GPO_MAKING_PAYMENT_NAME is required and must be 100 valid characters or less.'),
					'category' => t('Applicable Manufacturer'),
				);
			/*
			case 'APPLICABLE_MANUFACTURER_OR_APPLICABLE_GPO_MAKING_PAYMENT_REGISTRATION_ID':
				return array(
					'required' => TRUE,
					'regex' => '/^[a-zA-Z\d]{1,38}$/',
					'message' => t('APPLICABLE_MANUFACTURER_OR_APPLICABLE_GPO_MAKING_PAYMENT_REGISTRATION_ID is required and must be 38 characters or less.'),
					'category' => t('Applicable Manufacturer'),
				);
			*/
			case 'HOME_SYSTEM_PAYMENT_ID':
				return array(
					'required' => FALSE,
					'regex' => '/^[a-zA-Z\d]{1,50}$/',
					'message' => t('HOME_SYSTEM_PAYMENT_ID must be 50 characters or less.'),
					'category' => t('General/Formatting'),
				);
			case 'RESUBMITTED_PAYMENT_RECORD_ID':
				return array(
					'required' => FALSE,
					'regex' => '/^[a-zA-Z\d]{1,38}$/',
					'message' => t('RESUBMITTED_PAYMENT_RECORD_ID must be 38 characters or less.'),
					'category' => t('General/Formatting'),
				);
			case 'TOTAL_AMOUNT_OF_RESEARCH_PAYMENT_U_S_DOLLARS':
				return array(
					'required' => TRUE,
					'regex' => '/^\d{1,9}\.\d{2}$/',
					'message' => t('TOTAL_AMOUNT_OF_RESEARCH_PAYMENT_U_S_DOLLARS is required and must be 12 characters or less of the format xxxxxxxxx.xx.'),
					'category' => t('Spend Details'),
				);
			case 'DATE_OF_PAYMENT':
				return array(
					'required' => TRUE,
					'callback' => array('ResearchReportValidator', 'validateDateOfPayment'),
					'args' => array('YEAR' => 2013),
					'message' => t('DATE_OF_PAYMENT is required and must be within the 2013 calendar year.'),
					'category' => t('Spend Details'),
				);
			case 'FORM_OF_PAYMENT_OR_TRANSFER_OF_VALUE':
				return array(
					'required' => TRUE,
					'regex' => '/^(1|2|3|4){1}$/',
					'message' => t('FORM_OF_PAYMENT_OR_TRANSFER_OF_VALUE is required and must be 1, 2, 3, or 4.'),
					'category' => t('Spend Details'),
				);
			case 'EXPENDITURE_CATEGORY':
				return array(
					'required' => FALSE,
					'regex' => '/^(1|2|3|4|5|6){1}-0*([1-9][0-9]?|100)$/',
					'message' => t('EXPENDITURE_CATEGORY must match X-XX or X-XXX where the first number is "1", "2", "3", "4", "5" or "6" and the 2nd number is numberic between 1-100'),
					'category' => t('Spend Details'),
				);
			case 'PRE_CLINICAL_RESEARCH_INDICATOR':
				return array(
					'required' => TRUE,
					'regex' => '/^(Y|N){1}$/',
					'message' => t('PRE_CLINICAL_RESEARCH_INDICATOR is required and must be "Y" or "N".'),
					'category' => t('Spend Details'),
				);
			case 'DELAY_IN_PUBLICATION_OF_RESEARCH_PAYMENT_INDICATOR':
