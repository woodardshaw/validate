	static public function validateRecipientEmail($args, $record, $field, $nppes_data, $th_data) {
		$valid = TRUE;

		$regex = '/^.{1,100}$/';

		if (!empty($record[$field]) && !preg_match($regex, $record[$field])) {
			$valid = FALSE;
		} else if (!empty($record[$field]) && !filter_var($record[$field], FILTER_VALIDATE_EMAIL)) {
			$valid = FALSE;
		}

		return $valid;
	}
	static public function validatePhysicianNPI($args, $record, $field, $nppes_data, $th_data) {
		$valid = TRUE;

		$regex = '/^\d{10}$/';

		if (!empty($record[$field]) && !preg_match($regex, $record[$field])) {
			$valid = FALSE;
		} else if (!empty($record[$field])) {
			$valid = FALSE;
			if (isset($nppes_data) && isset($nppes_data['COVERED_RECIPIENT_PHYSICIAN_NPI']) && isset($nppes_data['COVERED_RECIPIENT_PHYSICIAN_NPI'][$record[$field]])) {
				$npi_str = "NPI";
				if (DIA_TESTING) {
					$npi_str = "npi";
				}
				if (strtoupper($record[$field]) == strtoupper($nppes_data['COVERED_RECIPIENT_PHYSICIAN_NPI'][$record[$field]][$npi_str])) {
					$valid = TRUE;
				}
			}
		}

		return $valid;
	}
	static public function validatePhysicianType($args, $record, $field, $nppes_data, $th_data) {
		$valid = TRUE;

		$regex = '/^(1|2|3|4|5|6){1}$/';

		$keys = array_keys($args);

		if ($record[$keys[0]] == $args[$keys[0]] && empty($record[$field])) {
			$valid = FALSE;
		} else if (!empty($record[$field]) && !preg_match($regex, $record[$field])) {
			$valid = FALSE;
		}

		return $valid;
	}
	static public function validatePhysicianSpecialty($args, $record, $field, $nppes_data, $th_data) {
		$valid = TRUE;

		$regex = '/^[a-zA-Z\d]{10}$/';

		$keys = array_keys($args);

		if ($record[$keys[0]] == $args[$keys[0]] && empty($record[$field])) {
			$valid = FALSE;
		} else if (!empty($record[$field]) && !preg_match($regex, $record[$field])) {
			$valid = FALSE;
		} else if (!empty($record[$field])) {
			$valid = ReportValidator::specialtyList($record[$field]);
		}

		return $valid;
	}
	static public function validatePhysicianLicenseNumber($args, $record, $field, $nppes_data, $th_data) {
		$valid = TRUE;

		$regex = '/^[a-zA-Z]{2}-[a-zA-Z \-\.\d]{1,17}$/';

		$keys = array_keys($args);

		$check_array = array();

		if (isset($nppes_data) && isset($nppes_data[$keys[1]]) && isset($nppes_data[$keys[1]][$record[$keys[1]]])) {
			if (isset($nppes_data[$keys[1]][$record[$keys[1]]]['provider_licenses'])) {
				foreach ($nppes_data[$keys[1]][$record[$keys[1]]]['provider_licenses'] as $provider_licenses) {
					if (is_array($provider_licenses) && isset($provider_licenses['id'])) {
						$check_array[] = strtoupper($provider_licenses['state_code']."-".$provider_licenses['number']);
					} else {
						foreach($provider_licenses as $provider_license) {
							$check_array[] = strtoupper($provider_license['state_code']."-".$provider_license['number']);
						}
					}
				}
			}
		}

		if ($record[$keys[0]] == $args[$keys[0]] && empty($record[$field])) {
			$valid = FALSE;
		} else if (!empty($record[$field]) && !preg_match($regex, $record[$field])) {
			$valid = FALSE;
		} else if (!empty($record[$field])) {
			$state_abbr = substr($record[$field],0,2);
			$valid = ReportValidator::validateStateList($state_abbr);
			
			if ($record[$keys[1]] != $args[$keys[1]]) {
				$valid = FALSE;

				if (in_array(strtoupper($record[$field]), $check_array)) {
					$valid = TRUE;
				}
			}
		}

		if (!$valid) {
			if (count($check_array) > 0) {
				$valid = array();
				$valid['valid'] = FALSE;
				$valid['dynamic_error'] = ", it should be '" . implode(', ', $check_array) . "'.";
			} else {
				$valid = array();
				$valid['valid'] = FALSE;
				$valid['dynamic_error'] = ".";
			}
		}

		return $valid;
	}
	static public function validatePhysicianLicenseNumberBlank($args, $record, $field, $nppes_data, $th_data) {
		$valid = TRUE;

		$regex = '/^[a-zA-Z]{2}-[a-zA-Z \-\.\d]{1,17}$/';

		$keys = array_keys($args);

		$check_array = array();

		if (isset($nppes_data) && isset($nppes_data[$keys[0]]) && isset($nppes_data[$keys[0]][$record[$keys[0]]])) {
			if (isset($nppes_data[$keys[0]][$record[$keys[0]]]['provider_licenses'])) {
				foreach ($nppes_data[$keys[0]][$record[$keys[0]]]['provider_licenses'] as $provider_licenses) {
					if (is_array($provider_licenses) && isset($provider_licenses['id'])) {
						$check_array[] = strtoupper($provider_licenses['state_code']."-".$provider_licenses['number']);
					} else {
						foreach($provider_licenses as $provider_license) {
							$check_array[] = strtoupper($provider_license['state_code']."-".$provider_license['number']);
						}
					}
				}
			}
		}

		if (!empty($record[$field]) && !preg_match($regex, $record[$field])) {
			$valid = FALSE;
		} else if (!empty($record[$field])) {
			$state_abbr = substr($record[$field],0,2);
			$valid = ReportValidator::validateStateList($state_abbr);

			if ($record[$keys[0]] != $args[$keys[0]]) {
				$valid = FALSE;

				if (in_array(strtoupper($record[$field]), $check_array)) {
					$valid = TRUE;
				}
			}
		}

		if (!$valid) {
			if (count($check_array) > 0) {
				$valid = array();
				$valid['valid'] = FALSE;
				$valid['dynamic_error'] = ", it should be '" . implode(', ', $check_array) . "'.";
			} else {
				$valid = array();
				$valid['valid'] = FALSE;
				$valid['dynamic_error'] = ".";
			}
		}

		return $valid;
	}
	static public function validateCoveredDrugName($args, $record, $field, $nppes_data, $th_data) {
		$valid = TRUE;

		$regex = '/^[a-zA-Z\&\ \#\@\_\,\.\'\-\d]{1,100}$/';

		$keys = array_keys($args);

		if ((in_array($record[$keys[0]], $args[$keys[0]]) && $record[$keys[1]] == $args[$keys[1]]) && empty($record[$field])) {
			$valid = FALSE;
		} else if (!empty($record[$field]) && !preg_match($regex, $record[$field])) {
			$valid = FALSE;
		}

		return $valid;
	}
	static public function validateCoveredDrugNdc($args, $record, $field, $nppes_data, $th_data) {
		$valid = TRUE;

		$regex = "";

		if (strpos($record[$field], "-") !== false) {
			$regex = '/^[a-zA-Z\d-]{1,12}$/';
		} else {
			$regex = '/^[a-zA-Z\d]{1,10}$/';
		}

		$keys = array_keys($args);

		if ($record[$keys[0]] != $args[$keys[0]] && empty($record[$field])) {
			$valid = FALSE;
		} else if (!empty($record[$field]) && !preg_match($regex, $record[$field])) {
			$valid = FALSE;
		}

		return $valid;
	}
	static public function validateDateOfPayment($args, $record, $field, $nppes_data, $th_data) {
		$valid = TRUE;

		$regex = '/^[\d]{8}$/';

		$keys = array_keys($args);

		if (empty($record[$field])) {
			$valid = FALSE;
		} else if (!empty($record[$field]) && !preg_match($regex, $record[$field])) {
			$valid = FALSE;
		} else if (substr($record[$field],0,4) != $args[$keys[0]]) {
			$valid = FALSE;
		}

		return $valid;
	}
