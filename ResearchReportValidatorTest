		$keys = array_keys($args);

		if ($record[$keys[0]] != $args[$keys[0]] && empty($record[$field])) {
			$valid = FALSE;
		} else if (!empty($record[$field]) && !preg_match($regex, $record[$field])) {
			$valid = FALSE;
		}

		return $valid;
	}
	static public function validateInvestigatorAddressBlank($args, $record, $field, $nppes_data, $th_data) {
		$valid = TRUE;

		$regex = '/^.{1,55}$/';

		$keys = array_keys($args);

		if ($record[$keys[0]] != $args[$keys[0]] && empty($record[$field])) {
			$valid = FALSE;
		} else if (!empty($record[$field]) && !preg_match($regex, $record[$field])) {
			$valid = FALSE;
		}

		return $valid;
	}
