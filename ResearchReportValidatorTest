			case 'PRINCIPAL5_INVESTIGATOR_LICENSE_STATE_AND_LICENSE_NUMBER_2':
				return array(
					'required' => FALSE,
					'callback' => array('ResearchReportValidator', 'validateInvestigatorLicenseNumberBlank'),
					'args' => array('PRINCIPAL5_INVESTIGATOR_NPI' => ''),
					'message' => t('PRINCIPAL5_INVESTIGATOR_LICENSE_STATE_AND_LICENSE_NUMBER_2 must validate against NPPES Database and must include the 2 digit state abbreviation and match the format MA-12345'),
					'category' => t('Covered Recipient'),
				);
			case 'PRINCIPAL5_INVESTIGATOR_LICENSE_STATE_AND_LICENSE_NUMBER_3':
				return array(
					'required' => FALSE,
					'callback' => array('ResearchReportValidator', 'validateInvestigatorLicenseNumberBlank'),
					'args' => array('PRINCIPAL5_INVESTIGATOR_NPI' => ''),
					'message' => t('PRINCIPAL5_INVESTIGATOR_LICENSE_STATE_AND_LICENSE_NUMBER_3 must validate against NPPES Database and must include the 2 digit state abbreviation and match the format MA-12345'),
					'category' => t('Covered Recipient'),
				);
			case 'PRINCIPAL5_INVESTIGATOR_LICENSE_STATE_AND_LICENSE_NUMBER_4':
				return array(
					'required' => FALSE,
					'callback' => array('ResearchReportValidator', 'validateInvestigatorLicenseNumberBlank'),
					'args' => array('PRINCIPAL5_INVESTIGATOR_NPI' => ''),
					'message' => t('PRINCIPAL5_INVESTIGATOR_LICENSE_STATE_AND_LICENSE_NUMBER_4 must validate against NPPES Database and must include the 2 digit state abbreviation and match the format MA-12345'),
					'category' => t('Covered Recipient'),
				);
			case 'PRINCIPAL5_INVESTIGATOR_LICENSE_STATE_AND_LICENSE_NUMBER_5':
				return array(
					'required' => FALSE,
					'callback' => array('ResearchReportValidator', 'validateInvestigatorLicenseNumberBlank'),
					'args' => array('PRINCIPAL5_INVESTIGATOR_NPI' => ''),
					'message' => t('PRINCIPAL5_INVESTIGATOR_LICENSE_STATE_AND_LICENSE_NUMBER_5 must validate against NPPES Database and must include the 2 digit state abbreviation and match the format MA-12345'),
					'category' => t('Covered Recipient'),
				);
		}
	}
	
	static public function validateRecipientEntity($args, $record, $field, $nppes_data, $th_data) {
		$valid = TRUE;

		$regex = '/^[a-zA-Z\&\ \#\@\_\,\.\'\-\d]{1,100}$/';

		$keys = array_keys($args);

		if ($record[$keys[0]] == $args[$keys[0]] && empty($record[$field])) {
			$valid = FALSE;
		} else if (!empty($record[$field]) && !preg_match($regex, $record[$field])) {
			$valid = FALSE;
		}

		return $valid;
	}
	static public function validateTeachingHospitalName($args, $record, $field, $nppes_data, $th_data) {
		$valid = TRUE;

		$regex = '/^.{1,100}$/';

		$keys = array_keys($args);

		$check_value = "";
		$check_test = "";
		$check_return = "";

		if (isset($th_data) && isset($th_data['COVERED_RECIPIENT_TEACHING_HOSPITAL_TAX_ID_NUMBER']) && isset($th_data['COVERED_RECIPIENT_TEACHING_HOSPITAL_TAX_ID_NUMBER'][$record[$keys[1]]])) {
			$check_value = str_replace("AMPERSAND", "", str_replace("&", "", strtoupper($record[$field])));
			$check_test = str_replace("AMPERSAND", "", str_replace("&", "", strtoupper($th_data['COVERED_RECIPIENT_TEACHING_HOSPITAL_TAX_ID_NUMBER'][$record[$keys[1]]]['name'])));
			$check_return = str_replace("ampersand", "&", $th_data['COVERED_RECIPIENT_TEACHING_HOSPITAL_TAX_ID_NUMBER'][$record[$keys[1]]]['name']);
		}

		if ($record[$keys[0]] == $args[$keys[0]] && empty($record[$field])) {
			$valid = FALSE;
		} else if (!empty($record[$field]) && !preg_match($regex, $record[$field])) {
			$valid = FALSE;
		} else if (!empty($record[$field])) {
			$valid = FALSE;
			if ($check_value == $check_test) {
				$valid = TRUE;
			}
		}
		
		if (!$valid) {
			if ($check_return != "") {
				$valid = array();
				$valid['valid'] = FALSE;
				$valid['dynamic_error'] = ", it should be '" . $check_return . "'.";
			} else {
				$valid = array();
				$valid['valid'] = FALSE;
				$valid['dynamic_error'] = ".";
			}
		}

		return $valid;
	}
	static public function validateTeachingHospitalTin($args, $record, $field, $nppes_data, $th_data) {
		$valid = TRUE;

		$regex = '/^\d{9}$/';

		$keys = array_keys($args);

		if ($record[$keys[0]] == $args[$keys[0]] && empty($record[$field])) {
			$valid = FALSE;
		} else if (!empty($record[$field]) && !preg_match($regex, $record[$field])) {
			$valid = FALSE;
		} else if (!empty($record[$field])) {
			$valid = FALSE;
			if (isset($th_data) && isset($th_data['COVERED_RECIPIENT_TEACHING_HOSPITAL_TAX_ID_NUMBER']) && isset($th_data['COVERED_RECIPIENT_TEACHING_HOSPITAL_TAX_ID_NUMBER'][$record[$field]])) {
				if ($record[$field] == $th_data['COVERED_RECIPIENT_TEACHING_HOSPITAL_TAX_ID_NUMBER'][$record[$field]]['TIN']) {
					$valid = TRUE;
				}
			}
		}

		return $valid;
	}
	static public function validatePhysicianFirstName($args, $record, $field, $nppes_data, $th_data) {
		$valid = TRUE;

		$regex = '/^[a-zA-Z\&\ \,\.\'\-\d]{1,20}$/';

		$keys = array_keys($args);

		$check_value = "";

		if (isset($nppes_data) && isset($nppes_data['COVERED_RECIPIENT_PHYSICIAN_NPI']) && isset($nppes_data['COVERED_RECIPIENT_PHYSICIAN_NPI'][$record[$keys[1]]])) {
			if (is_array($nppes_data['COVERED_RECIPIENT_PHYSICIAN_NPI'][$record[$keys[1]]]['fname'])) {
				$check_value = implode(" ",$nppes_data['COVERED_RECIPIENT_PHYSICIAN_NPI'][$record[$keys[1]]]['fname']);
			} else {
				$check_value = $nppes_data['COVERED_RECIPIENT_PHYSICIAN_NPI'][$record[$keys[1]]]['fname'];
			}
		}

		if (($record[$keys[0]] == $args[$keys[0]]) && empty($record[$field])) {
			$valid = FALSE;
		} else if (!empty($record[$field]) && !preg_match($regex, $record[$field])) {
			$valid = FALSE;
		} else if ($record[$keys[1]] != $args[$keys[1]]) {
			$valid = FALSE;

			if (strtoupper($record[$field]) == strtoupper($check_value)) {
				$valid = TRUE;
			}
		}

		if (!$valid) {
			if ($check_value != "") {
				$valid = array();
				$valid['valid'] = FALSE;
				$valid['dynamic_error'] = ", it should be '" . $check_value . "'.";
			} else {
				$valid = array();
				$valid['valid'] = FALSE;
				$valid['dynamic_error'] = ".";
			}
		}

		return $valid;
	}
	static public function validatePhysicianMiddleName($args, $record, $field, $nppes_data, $th_data) {
		$valid = TRUE;

		$regex = '/^.{1,20}$/';

		$keys = array_keys($args);

		$check_value = "";

		if (isset($nppes_data) && isset($nppes_data['COVERED_RECIPIENT_PHYSICIAN_NPI']) && isset($nppes_data['COVERED_RECIPIENT_PHYSICIAN_NPI'][$record[$keys[0]]])) {
			if (is_array($nppes_data['COVERED_RECIPIENT_PHYSICIAN_NPI'][$record[$keys[0]]]['mname'])) {
				$check_value = implode(" ",$nppes_data['COVERED_RECIPIENT_PHYSICIAN_NPI'][$record[$keys[0]]]['mname']);
			} else {
				$check_value = $nppes_data['COVERED_RECIPIENT_PHYSICIAN_NPI'][$record[$keys[0]]]['mname'];
			}
		}

		if (!empty($record[$field]) && !preg_match($regex, $record[$field])) {
			$valid = FALSE;
		} else if ($record[$keys[0]] != $args[$keys[0]]) {
			$valid = FALSE;

			if (str_replace(".","",strtoupper($record[$field])) == str_replace(".","",strtoupper($check_value))) {
				$valid = TRUE;
			} else if (substr(str_replace(".","",strtoupper($record[$field])),0,1) == substr(str_replace(".","",strtoupper($check_value)),0,1)) {
				$valid = TRUE;
			}
		}

		if (!$valid) {
			if ($check_value != "") {
				$valid = array();
				$valid['valid'] = FALSE;
				$valid['dynamic_error'] = ", it should be '" . $check_value . "'.";
			} else {
				$valid = array();
				$valid['valid'] = FALSE;
				$valid['dynamic_error'] = ".";
			}
		}

		return $valid;
	}
	static public function validatePhysicianLastName($args, $record, $field, $nppes_data, $th_data) {
		$valid = TRUE;

		$regex = '/^[a-zA-Z\&\ \,\.\'\-\d]{1,35}$/';

		$keys = array_keys($args);

		$check_value = "";

		if (isset($nppes_data) && isset($nppes_data['COVERED_RECIPIENT_PHYSICIAN_NPI']) && isset($nppes_data['COVERED_RECIPIENT_PHYSICIAN_NPI'][$record[$keys[1]]])) {
