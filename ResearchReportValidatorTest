	static public function validateUrl($args, $record, $field, $nppes_data, $th_data) {
		$valid = TRUE;

		$regex_length = '/^.{1,2083}$/';

		$keys = array_keys($args);

		if (!empty($record[$field]) && !preg_match($regex_length, $record[$field])) {
			$valid = FALSE;
		} else if (!empty($record[$field]) && !filter_var($record[$field], FILTER_VALIDATE_URL)) {
			$valid = FALSE;
		}

		return $valid;
	}
	static public function validateInvestigatorFirstName($args, $record, $field, $nppes_data, $th_data) {
		$valid = TRUE;

		$regex = '/^[a-zA-Z\&\ \,\.\'\-\d]{1,20}$/';

		$keys = array_keys($args);

		$check_value = "";

		if (isset($nppes_data) && isset($nppes_data[$keys[1]]) && isset($nppes_data[$keys[1]][$record[$keys[1]]])) {
			if (is_array($nppes_data[$keys[1]][$record[$keys[1]]]['fname'])) {
				$check_value = implode(" ",$nppes_data[$keys[1]][$record[$keys[1]]]['fname']);
			} else {
				$check_value = $nppes_data[$keys[1]][$record[$keys[1]]]['fname'];
			}
		}

		if ($record[$keys[0]] == $args[$keys[0]] && empty($record[$field])) {
			$valid = FALSE;
		} else if (!empty($record[$field]) && !preg_match($regex, $record[$field])) {
			$valid = FALSE;
		} else if ($record[$keys[1]] != $args[$keys[1]]) {
			$valid = FALSE;
			
			if (strtoupper($record[$field]) == strtoupper($check_value)) {
				$valid = TRUE;
			}
		}

		if (!$valid) {
			if ($check_value != "") {
				$valid = array();
				$valid['valid'] = FALSE;
				$valid['dynamic_error'] = ", it should be '" . $check_value . "'.";
			} else {
				$valid = array();
				$valid['valid'] = FALSE;
				$valid['dynamic_error'] = ".";
			}
		}

		return $valid;
	}
