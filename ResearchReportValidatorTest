	}
	static public function validateInvestigatorCountryBlank($args, $record, $field, $nppes_data, $th_data) {
		$valid = TRUE;

		$regex = '/^.{1,40}$/';

		$keys = array_keys($args);

		if ($record[$keys[0]] != $args[$keys[0]] && empty($record[$field])) {
			$valid = FALSE;
		} else if (!empty($record[$field]) && !preg_match($regex, $record[$field])) {
			$valid = FALSE;
		} else if (!empty($record[$field])) {
			$valid = ReportValidator::validateCountryList($record[$field]);
		}

		return $valid;
	}
