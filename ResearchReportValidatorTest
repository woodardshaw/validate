				$check_value = implode(" ",$nppes_data['COVERED_RECIPIENT_PHYSICIAN_NPI'][$record[$keys[1]]]['lname']);
			} else {
				$check_value = $nppes_data['COVERED_RECIPIENT_PHYSICIAN_NPI'][$record[$keys[1]]]['lname'];
			}
		}

		if ($record[$keys[0]] == $args[$keys[0]] && empty($record[$field])) {
			$valid = FALSE;
		} else if (!empty($record[$field]) && !preg_match($regex, $record[$field])) {
			$valid = FALSE;
		} else if ($record[$keys[1]] != $args[$keys[1]]) {
			$valid = FALSE;

			if (strtoupper($record[$field]) == strtoupper($check_value)) {
				$valid = TRUE;
			}
		}

		if (!$valid) {
			if ($check_value != "") {
				$valid = array();
				$valid['valid'] = FALSE;
				$valid['dynamic_error'] = ", it should be '" . $check_value . "'.";
			} else {
				$valid = array();
				$valid['valid'] = FALSE;
				$valid['dynamic_error'] = ".";
			}
		}

		return $valid;
	}
	static public function validatePhysicianSuffix($args, $record, $field, $nppes_data, $th_data) {
		$valid = TRUE;

		$regex = '/^.{1,5}$/';

		$keys = array_keys($args);

		$check_value = "";

