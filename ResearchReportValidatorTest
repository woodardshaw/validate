				$check_value = $nppes_data['COVERED_RECIPIENT_PHYSICIAN_NPI'][$record[$keys[0]]]['suffix'];
			}
		}

		if (!empty($record[$field]) && !preg_match($regex, $record[$field])) {
			$valid = FALSE;
		} else if ($record[$keys[0]] != $args[$keys[0]]) {
			$valid = FALSE;

			if (str_replace(".","",strtoupper($record[$field])) == str_replace(".","",strtoupper($check_value))) {
				$valid = TRUE;
			}
		}

		if (!$valid) {
			if ($check_value != "") {
				$valid = array();
				$valid['valid'] = FALSE;
				$valid['dynamic_error'] = ", it should be '" . $check_value . "'.";
			} else {
				$valid = array();
				$valid['valid'] = FALSE;
				$valid['dynamic_error'] = ".";
			}
		}

		return $valid;
	}

	static public function validateRecipientBusinessLineOne($args, $record, $field, $nppes_data, $th_data) {
		$valid = TRUE;

		$regex = '/^[a-zA-Z\&\ \#\@\_\,\.\'\-\d]{1,55}$/';

		$keys = array_keys($args);

		$check_value = "";
		$check_test = "";
		$check_return = "";

		if (isset($th_data) && isset($th_data['COVERED_RECIPIENT_TEACHING_HOSPITAL_TAX_ID_NUMBER']) && isset($th_data['COVERED_RECIPIENT_TEACHING_HOSPITAL_TAX_ID_NUMBER'][$record[$keys[1]]])) {
			$check_value = strtoupper($record[$field]);
			$check_test = strtoupper($th_data['COVERED_RECIPIENT_TEACHING_HOSPITAL_TAX_ID_NUMBER'][$record[$keys[1]]]['address1']);
			$check_return = $th_data['COVERED_RECIPIENT_TEACHING_HOSPITAL_TAX_ID_NUMBER'][$record[$keys[1]]]['address1'];
		}

		if ($record[$keys[0]] == $args[$keys[0]] && empty($record[$field])) {
			$valid = FALSE;
		} else if (!empty($record[$field]) && !preg_match($regex, $record[$field])) {
			$valid = FALSE;
		} else if ($record[$keys[0]] == $args[$keys[0]] && !empty($record[$field])) {
			$valid = FALSE;

			if ($check_value == $check_test) {
				$valid = TRUE;
			}
		}

		if (!$valid) {
			if ($check_return != "") {
				$valid = array();
				$valid['valid'] = FALSE;
				$valid['dynamic_error'] = ", it should be '" . $check_return . "'.";
			} else {
				$valid = array();
				$valid['valid'] = FALSE;
				$valid['dynamic_error'] = ".";
			}
		}

		return $valid;
	}

